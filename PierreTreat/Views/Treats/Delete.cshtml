@{
  Layout = "_Layout";
}

@model PierreTreat.Models.Treat

@if (User.Identity.IsAuthenticated)
{
  <h2>Are you sure you want to delete this?</h2>

  <p>Treat: @Html.DisplayFor(model => model.TreatType)</p>
  @using (Html.BeginForm())
  {
    <input type="submit" value="Delete" />
  }
}
else
{
    <p>Please @Html.ActionLink("log in", "LogIn", "Account") to delete this treat: @Html.DisplayFor(model => model.TreatType).</p>
}