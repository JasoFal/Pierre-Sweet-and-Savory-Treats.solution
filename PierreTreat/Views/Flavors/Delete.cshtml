@{
  Layout = "_Layout";
}

@model PierreTreat.Models.Flavor

@if (User.Identity.IsAuthenticated)
{
  <h2>Are you sure you want to delete this?</h2>

  <p>Flavor: @Html.DisplayFor(model => model.FlavorName)</p>
  @using (Html.BeginForm())
  {
    <input type="submit" value="Delete" />
  }
}
else
{
  <p>Please @Html.ActionLink("log in", "LogIn", "Account") to delete this flavor: @Html.DisplayFor(model => model.FlavorName).</p>
}