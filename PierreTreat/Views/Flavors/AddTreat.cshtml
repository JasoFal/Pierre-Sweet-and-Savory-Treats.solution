@{
  Layout = "_Layout";
}

@model PierreTreat.Models.Flavor

<h2>Add a treat</h2>

@if (User.Identity.IsAuthenticated)
{
  <h4>Add this flavor to a treat: @Html.DisplayFor(model => model.FlavorName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
  }
}
else
{
  <p>Please @Html.ActionLink("log in", "LogIn", "Account") to add this flavor to a treat: @Html.DisplayFor(model => model.FlavorName)</p>
}

<p>@Html.ActionLink("Back to list", "Index")</p>